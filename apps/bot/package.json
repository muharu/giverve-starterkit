{
  "name": "bot",
  "version": "0.1.0",
  "scripts": {
    "dev": "pnpm with-env tsx src/index.ts",
    "build": "pnpm with-env esbuild src/**/*.ts --bundle --platform=node --outdir=dist",
    "start": "pnpm with-env node dist/index.js",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "commandkit": "^0.1.10",
    "discord.js": "^14.15.3"
  },
  "devDependencies": {
    "@giverve/eslint-config": "workspace:*",
    "@giverve/prettier-config": "workspace:*",
    "@giverve/tsconfig": "workspace:*",
    "@types/node": "latest",
    "dotenv-cli": "catalog:",
    "esbuild": "^0.23.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
